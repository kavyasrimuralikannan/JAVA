import java.util.*;

class Solution {
    Map<String, List<Character>> map = new HashMap<>();
    
    public boolean pyramidTransition(String bottom, List<String> allowed) {
        for (String tri : allowed) {
            String key = tri.substring(0, 2);
            char val = tri.charAt(2);
            map.computeIfAbsent(key, k -> new ArrayList<>()).add(val);
        }
        return dfs(bottom, "");
    }
    
    private boolean dfs(String bottom, String nextRow) {
        if (bottom.length() == 1) return true; // reached the top
        
        if (nextRow.length() == bottom.length() - 1) {
            // completed current row, move to the next row
            return dfs(nextRow, "");
        }
        
        int i = nextRow.length();
        String key = bottom.substring(i, i + 2);
        if (!map.containsKey(key)) return false; // no allowed block
        
        for (char c : map.get(key)) {
            if (dfs(bottom, nextRow + c)) return true;
        }
        
        return false;
    }
    
    public static void main(String[] args) {
        Solution sol = new Solution();
        String bottom = "BCD";
        List<String> allowed = Arrays.asList("BCC","CDE","CEA","FFF");
        System.out.println(sol.pyramidTransition(bottom, allowed)); // true
        
        bottom = "AAAA";
        allowed = Arrays.asList("AAB","AAC","BCD","BBE","DEF");
        System.out.println(sol.pyramidTransition(bottom, allowed)); // false
    }
}
